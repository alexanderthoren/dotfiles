# display
# focus
rctrl - r : yabai -m display --focus recent
rctrl + rshift - 0x2B : yabai -m display --focus prev
rctrl + rshift - 0x2F : yabai -m display --focus next

rctrl - 1 : yabai -m display --focus 1
rctrl - 2 : yabai -m display --focus 2
rctrl - 3 : yabai -m display --focus 3

# space
# create - destroy
rcmd - c : yabai -m space --create
rcmd - d : yabai -m space --destroy

# layout
rcmd - b : yabai -m space --layout bsp
rcmd - f : yabai -m space --layout float
rcmd - s : yabai -m space --layout stack

rcmd - 0 : yabai -m space --balance
rcmd - x : yabai -m space --mirror x-axis
rcmd - y : yabai -m space --mirror y-axis

# focus
rcmd - r : yabai -m space --focus recent
rcmd + rshift - 0x2B : yabai -m space --focus prev
rcmd + rshift - 0x2F : yabai -m space --focus next

rcmd - 1 : yabai -m space --focus 1
rcmd - 2 : yabai -m space --focus 2
rcmd - 3 : yabai -m space --focus 3
rcmd - 4 : yabai -m space --focus 4
rcmd - 5 : yabai -m space --focus 5
rcmd - 6 : yabai -m space --focus 6
rcmd - 7 : yabai -m space --focus 7
rcmd - 8 : yabai -m space --focus 8
rcmd - 9 : yabai -m space --focus 9

# move
rcmd + rctrl + rshift - 0x2B : yabai -m space --move prev
rcmd + rctrl + rshift - 0x2F : yabai -m space --move next
rcmd + rctrl - 1 : yabai -m space --display 1
rcmd + rctrl - 2 : yabai -m space --display 2
rcmd + rctrl - 3 : yabai -m space --display 3

# window
# focus
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east
lalt - r : yabai -m window --focus recent
lalt + rshift - 0x2B : yabai -m window --focus prev
lalt + rshift - 0x2F : yabai -m window --focus next

# swap
lalt + lctrl - h : yabai -m window --swap west
lalt + lctrl - j : yabai -m window --swap south
lalt + lctrl - k : yabai -m window --swap north
lalt + lctrl - l : yabai -m window --swap east
lalt + lctrl - r : yabai -m window --swap recent
lalt + lctrl + rshift - 0x2B : yabai -m window --swap prev
lalt + lctrl + rshift - 0x2F : yabai -m window --swap next

# warp
lalt + lcmd - h : yabai -m window --warp west
lalt + lcmd - j : yabai -m window --warp south
lalt + lcmd - k : yabai -m window --warp north
lalt + lcmd - l : yabai -m window --warp east
lalt + lcmd - r : yabai -m window --warp recent
lalt + lcmd + rshift - 0x2B : yabai -m window --warp prev
lalt + lcmd + rshift - 0x2F : yabai -m window --warp next

# move to space 
lalt + rcmd + rshift - 0x2B : yabai -m window --space prev
lalt + rcmd + rshift - 0x2F : yabai -m window --space next
lalt + rcmd - 1 : yabai -m window --space 1
lalt + rcmd - 2 : yabai -m window --space 2
lalt + rcmd - 3 : yabai -m window --space 3
lalt + rcmd - 4 : yabai -m window --space 4
lalt + rcmd - 5 : yabai -m window --space 5
lalt + rcmd - 6 : yabai -m window --space 6
lalt + rcmd - 7 : yabai -m window --space 7
lalt + rcmd - 8 : yabai -m window --space 8
lalt + rcmd - 9 : yabai -m window --space 9

# move to display 
lalt + rctrl + rshift - 0x2B : yabai -m window --display prev
lalt + rctrl + rshift - 0x2F : yabai -m window --display next
lalt + rctrl - 1 : yabai -m window --display 1
lalt + rctrl - 2 : yabai -m window --display 2
lalt + rctrl - 3 : yabai -m window --display 3
