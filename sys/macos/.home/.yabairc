yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Space settings
yabai -m config layout bsp
yabai -m config external_bar all:30:0
yabai -m config top_padding 20
yabai -m config bottom_padding 20
yabai -m config left_padding 20
yabai -m config right_padding 20
yabai -m config window_gap 20

# Window settings
yabai -m config window_placement second_child
yabai -m config window_shadow off
yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.8
yabai -m config window_animation_duration 0.0
yabai -m config window_opacity_duration 0.0

yabai -m config window_border on
yabai -m config window_border_width 4
yabai -m config active_window_border_color 0xffffffff
yabai -m config normal_window_border_color 0x55ffffff
yabai -m config window_border_blur off

# Unmanaged apps
yabai -m rule --add app="^System Settings$"  manage=off border=off
yabai -m rule --add app="^Calculator$"  manage=off border=off
yabai -m rule --add app="^Finder$"  manage=off

# Space labels
yabai -m space 1 --label "Terminal" --display 1
yabai -m space 2 --label "Development" --display 1
yabai -m space 3 --label "System" --display 1
yabai -m space 4 --label "Communication" --display 2
yabai -m space 5 --label "Browser" --display 2
yabai -m space 6 --label "Tools" --display 2

# Space config
yabai -m config --space 1 layout stack
yabai -m config --space 2 layout stack
yabai -m config --space 3 layout stack
yabai -m config --space 4 layout stack
yabai -m config --space 5 layout bsp
yabai -m config --space 6 layout stack

# Space 1 apps
yabai -m rule --add app="Alacritty" space=^1

